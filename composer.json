{
    "name": "halobear\/halo-service",
    "description": "通用服务层",
    "license": "MIT",
    "authors": [
        {
            "name": "guansq",
            "email": "94600115@qq.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "pimple/pimple": "~3.0",
        "adbario/php-dot-notation": "^2.1"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "HaloService\\": "src"
        },
        "files": [
            "src/Kernel/Support/helpers.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "sudo chmod 777 -R ./src/Command",
            "sudo chmod 777 -R ./src/Command/*"
        ],
        "post-package-install": [
            "sudo chmod 777 -R ./src/Command",
            "sudo chmod 777 -R ./src/Command/*"
        ],
        "post-package-update": [
            "sudo chmod 777 -R ./src/Command",
            "sudo chmod 777 -R ./src/Command/*"
        ]
    }
}
